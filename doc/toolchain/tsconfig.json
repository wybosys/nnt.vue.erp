{
  "compilerOptions": {
    "outDir": "tmp",
    "target": "ESNext",
    "sourceMap": false,
    "strict": true,    
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "esModuleInterop": false,
    "module": "CommonJS",    
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src"
  ]
}
